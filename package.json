{
    "name": "mi_roulotte_api",
    "version": "1.3.1",
    "description": "Backend API for a blog where I share our family adventures and travel experiences on the road with our caravan.",
    "homepage": "https://api.miroulotte.es",
    "repository": {
        "type": "git",
        "url": "https://github.com/AlejaDiez/mi_roulotte_api"
    },
    "license": "CC-A-NC-SA-4.0",
    "author": "Alejandro Diez Bermejo",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "dotenv -- wrangler dev --port 3010 --env dev",
        "deploy": "wrangler deploy --minify",
        "cf-typegen": "dotenv -- wrangler types --env-interface=Bindings",
        "db:generate": "drizzle-kit generate --name=migration",
        "db:studio:local": "LOCAL_DB_PATH=$(find .wrangler/state/v3/d1/miniflare-D1DatabaseObject -type f -name '*.sqlite' -print -quit) drizzle-kit studio",
        "db:studio:remote": "source .env && drizzle-kit studio",
        "db:migrate": "npm run db:migrate:local && npm run db:migrate:remote",
        "db:migrate:local": "wrangler d1 migrations apply mi-roulotte-db --local",
        "db:migrate:remote": "wrangler d1 migrations apply mi-roulotte-db --remote"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "drizzle-orm": "^0.44.7",
        "hono": "^4.10.4",
        "jose": "^6.1.0",
        "resend": "^6.4.2",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@types/node": "^24.10.0",
        "better-sqlite3": "^12.4.1",
        "dotenv-cli": "^11.0.0",
        "drizzle-kit": "^0.31.6",
        "prettier": "^3.6.2",
        "prettier-plugin-organize-imports": "^4.3.0",
        "wrangler": "^4.46.0"
    }
}
